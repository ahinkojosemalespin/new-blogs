<div ng-controller="tagsCtrl">
	<script src="/javascripts/tags.js" type="text/javascript"></script>
	<% layout('layout.ejs') %>
	<div ng-init="loadTags()">
	    <h1 id="titleTag">Tags</h1>
	    <!-- Button trigger modal -->
	    <a id="btnNewTag" data-toggle="modal" href="#modalNewTag" class="btn btn-primary btn-lg">Add new tag</a>
	    <p>This is a list of all the tags available</p>
	    <table class="table">
	        <thead>
	            <tr>
	                <th>Text tag</th>
	                <th>URL Tag</th>
	            </tr>
	        </thead>
	        <tbody>
	        	<!-- All the tags are written on the table-->
	            <tr ng-repeat="tag in tags">
	                <td>{{tag.texttag}}</td>
	                <td>{{tag.urltag}}</td>
	            </tr>
	        </tbody>
	    </table>
	</div>

	<!-- Modal to create a new Tag-->
	<div class="modal fade" id="modalNewTag" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-dialog">
	        <div class="modal-content">
	            <div class="modal-header">
	                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	                <h4 class="modal-title">New Tag</h4>
	            </div>
	            <div class="modal-body">
	                <form role="form">
	                    <div class="form-group">
	                        <label for="txtTextTag">Text</label><input class="form-control" id="txtTextTag" placeholder="" type="text" ng-model="dataTag.texttag">
	                    </div>
	                    <div class="form-group">
	                        <label for="txtUrlTag">URL</label><input class="form-control" id="txtUrlTag" placeholder="" type="text" ng-model="dataTag.urltag">
	                    </div>
	                </form>
	            </div>
	            <div class="modal-footer">
	                <button id="closeNewTag" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	                <button type="button" ng-click="createTag()" class="btn btn-primary">Save</button>
	            </div>
	        </div>
	    </div>
	</div>
</div>